<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:insetLeft="@dimen/waffle_button_inset_horizontal_material"
    android:insetTop="@dimen/waffle_button_inset_vertical_material"
    android:insetRight="@dimen/waffle_button_inset_horizontal_material"
    android:insetBottom="@dimen/waffle_button_inset_vertical_material">
    <ripple
        android:color="?colorControlHighlight">
        <item>
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/waffle_control_corner_material" />
                <solid android:color="@android:color/white" />
                <padding
                    android:bottom="@dimen/waffle_btn_background_padding_vertical"
                    android:left="@dimen/waffle_btn_background_padding_start"
                    android:right="@dimen/waffle_btn_background_padding_end"
                    android:top="@dimen/waffle_btn_background_padding_vertical" />
            </shape>
        </item>
    </ripple>
</inset>
